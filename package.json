{
	"name": "lanier-plumbing",
	"version": "1.0.0",
	"description": "Lanier Plumbing WordPress Theme",
	"author": "Lanier Plumbing",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"clean": "rimraf css/style.css",
		"dev": "npm run clean && tailwindcss -i ./css/tailwind.css -o ./css/style.css --postcss --watch",
		"build": "npm run clean && tailwindcss -i ./css/tailwind.css -o ./css/style.css --postcss --minify"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.32",
		"postcss-import": "^15.1.0",
		"rimraf": "^5.0.5",
		"tailwindcss": "^3.3.6"
	}
}